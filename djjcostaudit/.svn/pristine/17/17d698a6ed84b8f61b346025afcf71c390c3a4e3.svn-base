@charset "UTF-8";
body{
    font-size: 12px;
    box-sizing: border-box;
    color:#3b3e41;
}
input,
textarea,
button {
    -webkit-user-select: text;
    -ms-user-select: text;
    user-select: text;
}
img{
    vertical-align: middle;
}
input:-webkit-autofill {
    -webkit-box-shadow: 0 0 0px 1000px white inset !important;
}

input,
select,
textarea,
button {
    outline: none;
    border: none;
    background: none;
    line-height: normal;
}
::-webkit-input-placeholder {
    color: #8e9dad;
    font-size: 12px;
}

:-moz-placeholder {
    color: #364e66;
    font-size: 12px;
}

::-moz-placeholder {
    color: #364e66;
    font-size: 12px;
}

:-ms-input-placeholder {
    color: #8e9dad;
    font-size: 12px;
}

.table_edit{width:100%;
    -webkit-border-radius: 4px;
    -moz-border-radius: 4px;
    border-radius: 4px;
    border:1px solid #ced2d6;
    background: #fff;
    margin-bottom: 0px;

}
.table > thead > tr > th, .table > tbody > tr > th, .table > tfoot > tr > th, .table > thead > tr > td, .table > tbody > tr > td, .table > tfoot > tr > td {

    padding: 0 14px;
    line-height: 1.42857143;
    vertical-align: middle;
    border-top: 1px solid #ddd;

}
.table_edit tr{
    border-top:none;
    height: 36px;
}
.table_edit td{
    border-right:1px solid #ced2d6;
    border-bottom:1px solid #ced2d6 ;
    padding:0 14px;
}
.table_edit tr:last-child td{
    border-bottom: none;
}
.table_edit td:last-child{ border-right:none}
.table_edit .first{
    height: 48px;
    line-height:48px;
}
.table_edit tr td.bgcolor{
    background-color: #f4f7fb;
    font-size: 12px;
    font-weight: bold;
    text-align: right;
}
.table_edit tr td .manager{
    padding-left:10px;display: inline-block;width:50%;text-align: left;height: 30px;line-height: 30px;
}
.table_edit tr td.bgcolor strong,label>strong{
    color:#fa6060;
    font-size: 16px;
    font-family: "Microsoft Yahei";
}

.table_edit .custom-select {
    display: inline-block;
    width: 100%;
    height: 30px;
    padding: .245rem 1.75rem .245rem .75rem;
    line-height: 1.4;
    color: #3b3e41;
    vertical-align: middle;
    background: #fff url("../../images/pagecommon/select.png") no-repeat right .75rem center;
    background-size: 8px 10px;
    border: 1px solid #dbe5ee;
    border-radius: .25rem;
    -webkit-appearance: none;
    -moz-appearance: none;
    -ms-appearance:none;
    -o-appearance:none;
    appearance: none;

}
select::-ms-expand { display: none; }
.table_edit .custom-select>option {
    padding: 0 1rem;
}
.table_edit textarea{
    width: 100%;padding: 10px;resize: none;overflow: auto;
}
.table_edit .kjName{
    padding-left:20px;
    line-height: 28px;
}
/*detail*/
.first .form-group{
    display: inline-block;
    margin-right:20px;
}
.first .form-group label{
    font-weight: bold;
    color:#283747;
    font-size: 12px;
}
.first .form-group label.hetong{
    font-weight: normal;
}
.first .form-group input[type='radio']{
    margin-right: 8px;

}
.first .form-group .form-control{
    height: 32px;
    line-height: 32px;
    border:1px solid #dbe5ee;
    -webkit-border-radius: 4px;
    -moz-border-radius: 4px;
    border-radius: 4px;
    padding:0 8px;
}
/* form */
input[type="file"] {
    color: transparent;
}
.table_edit .file-input{
    line-height:30px;
    position:relative;
    margin-top:10px;
    margin-bottom:10px;
    display: inline-block;

}
.Wdate{
    width: 100%;
    height: 28px !important;
    line-height:28px;
    display: inline-block;
    border:1px solid #dbe5ee !important;
    border-radius:4px;
}
.table_edit .row label{
    color:#3b3e41;
    font-weight: bold;
    font-size: 12px;
}
.table_edit .file-input .input-container{
    width:100px;
    height:30px;
    text-align:center;
    border-radius:4px;
    display: inline-block;

}
.table_edit .file-input.blue .input-container{
    color:#3879d9;
    border:1px solid #3879d9;
}
.table_edit .file-input.red .input-container{
    color:#ff7076;
    border:1px solid #ff7076;
}
.table_edit .file-input.green .input-container{
    color:#7dc668;
    border:1px solid #7dc668;
}
.table_edit .file-input.gray .input-container{
    color:#aaa;
    border:1px solid #aaa;
}
.table_edit .file-input.blue .input-container:hover{
   background-color: #4a90e2;
    color:#fff;
}
.table_edit .file-input.red .input-container:hover{
    color: #fff;
    background-color: #ff7076;
    border-color: #ff7076;
}
.table_edit .file-input.green .input-container:hover{
    color: #fff;
    background-color: #7dc668;
    border-color: #7dc668;
}
.table_edit .file-input.gray .input-container:hover{
    color: #fff;
    background-color: #aaa;
    border-color: #aaa;
}
.table_edit .file-input input{
    position:absolute;
    left:0;
    top:0;
    opacity:0;
    width:102px;
    height: 32px;
}
.file-input .name{
    position:absolute;
    left:110px;
    top:0;
    font-size:14px;
    color:#4a90e2;
    display: inline-block;
    padding-left:4px;
    width:100px;
    height: 30px;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
/*radio*/
.form-group > input[type='radio'] {
    display: none;

}
.form-group label {
    vertical-align: middle;
    line-height: 20px;
    display: inline-block;
    height: 20px;

}
label.hetong{
    margin-left:5px;
}

.form-group > input[type='radio']:checked + label::before {
    border: 1px solid #57b5e3;

}

.form-group > input[type='radio']:checked + label::after {
    display: block;
}

.form-group > input[type='radio'] + label {
    position: relative;
    cursor: pointer;
    vertical-align: middle;

}
.form-group > input[type='radio'] + label::before {
    border-radius: 50%;
    position: relative;
    top: 0;
    left: 0;
    display: inline-block;
    width: 12px;
    height: 12px;
    content: '';
    border: 1px solid #c0c0c0;
}

.form-group > input[type='radio'] + label::after {
    content: "";
    display: none;
    position: absolute;
    top: 4px;
    left: 3px;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #34adeb;
}
/*tabs*/
.subWrap{
    padding:5px !important;
}