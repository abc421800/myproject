    <script type="text/javascript">
        var loginType = parseInt('0');
        $(function () {
            var h1 = $(".wrap").height();
            var h3 = $(".product_con").height();
            var h4 = $(".footer").height();
            var h = $(window).height();
            $(".content").height(h - h1 - h3 - h4);
            $(".content").css(
                { "padding-top": ((h - h1 - h3 - h4 - 385) / 2 + 20) + "px"
                });
            $("#username").on("focus", function () {
            });

            $("input").focus(function () {
                $("#cue").text("");
            });
            var flag = $("#flag").val();
            if (flag) {
                $("#cue").text(flag);
                $("#cue").css("display", "block").css("color", "red");
            }
            var winWidth = $(document.body).outerWidth(true);
            if (winWidth > 1096) {
                $(".content").width(1096);
                $(".product_con").width(1096);
            } else {
                $(".content").width(1024);
                $(".product_con").width(1024);
            }
            if (loginType == 1) {
                showLoginUI();
            }
        });    
        function checkspace(checkstr) {
            var str = '';
            for (i = 0; i < checkstr.length; i++) {
                str = str + ' ';
            }
            return (str == checkstr);
        }
        //提交验证
        function validateLogin() {
             if (checkspace(document.loginform.username.value)) {
                 $("#error").empty();
                 var html='<i class="fa fa-info-circle fa-lg" aria-hidden="true"></i> 账号不能为空!';
                 $("#error").append(html);
                 document.loginform.username.focus();
                 return;
             }
             if (checkspace(document.loginform.password.value)) {
                 $("#error").empty();
                 var html='<i class="fa fa-info-circle fa-lg" aria-hidden="true"></i> 密码不能为空!';
                 $("#error").append(html);
                 document.loginform.password.focus();
                 return;
             }
             document.loginform.submit();
            return true;
        };

        document.onkeydown = keyListener;
        function keyListener(e) {
            e = e ? e : event;
            //判断用户名和密码是否为空
            if (e.keyCode == 13) {
                validateLogin();
            }
        }
    </script>
    <script type="text/javascript">
        function UrlEncode(str) {
            return transform(str);
        }

        function transform(s) {
            var hex = ''
            var i, j, t

            j = 0
            for (i = 0; i < s.length; i++) {
                t = hexfromdec(s.charCodeAt(i));
                if (t == '25') {
                    t = '';
                }
                hex += '%' + t;
            }
            return hex;
        }

        function hexfromdec(num) {
            if (num > 65535) { return ("err!") }
            first = Math.round(num / 4096 - .5);
            temp1 = num - first * 4096;
            second = Math.round(temp1 / 256 - .5);
            temp2 = temp1 - second * 256;
            third = Math.round(temp2 / 16 - .5);
            fourth = temp2 - third * 16;
            return ("" + getletter(third) + getletter(fourth));
        }

        function getletter(num) {
            if (num < 10) {
                return num;
            }
            else {
                if (num == 10) { return "A" }
                if (num == 11) { return "B" }
                if (num == 12) { return "C" }
                if (num == 13) { return "D" }
                if (num == 14) { return "E" }
                if (num == 15) { return "F" }
            }
        }
    </script>
