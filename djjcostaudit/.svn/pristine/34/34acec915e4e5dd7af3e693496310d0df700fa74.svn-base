  <select id="selectListByMap" resultMap="BaseResultMap" parameterType="map" >
   		SELECT u.*,GROUP_CONCAT(DISTINCT o.`name`) AS 'orgId',GROUP_CONCAT(DISTINCT r.`name`) AS 'roleId'  FROM sys_user u 
			LEFT JOIN sys_user_org uo  ON u.id=uo.user_id 
			LEFT JOIN sys_org o ON o.id =uo.org_id
			LEFT JOIN sys_user_role ur ON ur.user_id=u.id
			LEFT JOIN sys_role r ON r.id=ur.role_id
    <where>
          <if test="name != null and name !='' ">
               and u.name like concat('%',#{name},'%')
          </if>
          <if test="account != null and account !='' ">
               and u.account like concat('%',#{account},'%')
          </if>
          <if test="sex != null and sex !='' ">
               and u.sex = #{sex}
          </if>
          <if test="orgId != null and orgId !='' ">
               and o.id = #{orgId}
          </if>
           <if test="orgName != null and orgName !='' ">
               and o.name = #{orgName}
          </if>
          <if test="status != null and status !='' ">
               and u.status = #{status}
          </if>
          <if test="roleNameNotEq != null and roleNameNotEq !='' ">
               and r.name != #{roleNameNotEq}
          </if>
          
    </where>
    GROUP BY u.id
    order by u.create_time desc
    <if test="isPage==true">
    		limit #{curPage},#{pageSize}
    </if>
  </select>
