                field: 'creater',
                title: '登记人',
                width: 120,
                align: 'center',
                sortable: false,

            }, {
                field: 'createTime',
                title: '登记时间',
                width: 120,
                align: 'center',
                sortable: false
            }
            ]
        ] , 
