        },
        columns: [
            [
                {
                field:'name',
                title:'驻场人员',
                width:130,
                align:'center',
                sortable:false
            },{
                field:'phone',
                title:'联系电话',
                width:150,
                align:'center',
                sortable:false
            },{
                field: 'actualStartTimeStr',
                title: '实际驻场开始时间',
                width: 100,
                align: 'center',
                sortable: false

            }, {
                field: 'actualEndTimeStr',
                title: '实际驻场结束时间',
                width: 100,
                align: 'center',
                sortable: false

            }, {
                field: 'totalDay',
                title: '累计驻场天数',
                width: 120,
                align: 'center',
                sortable: false,
                formatter: function (value, rowData, index) {
                	if(rowData.id){
                		var actualStartTimeStr=rowData.actualStartTimeStr;
                		var cuurDate=new Date();
                		var actualEndTimeStr=rowData.actualEndTimeStr;
                		if(rowData.effectiveFlag=='有效'){
                			var t=DateMinus(actualStartTimeStr,cuurDate);
                			if(t<0){
                				return 0;
                			}else{
                				return DateMinus(actualStartTimeStr,cuurDate)+" 天";
                			}
                		}else{
                			if(actualEndTimeStr){
                				return DateMinus(actualStartTimeStr,actualEndTimeStr)+" 天";
                			}else{
                				return DateMinus(actualStartTimeStr,cuurDate)+" 天";
                			}
                		}
                	}
                }
            }, {
                field: 'annualLeaveTotal',
                title: '可休年假',
                align: 'center',
                width: 120,
                sortable: false,

            },  {
                field: 'effectiveFlag',
                title: '是否有效',
                align: 'center',
                width: 120,
                sortable: false

            }, {
                field: 'creater',
                title: '登记人',
                width: 120,
                align: 'center',
                sortable: false,

            }, {
                field: 'createTime',
                title: '登记时间',
                width: 120,
                align: 'center',
                sortable: false
            }
            ]
        ] , 
        onLoadSuccess: function (data) {
